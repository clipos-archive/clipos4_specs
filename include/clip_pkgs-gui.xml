	<config>
		<confname>pkgs-gui</confname>
		<env>CPREFIX=/usr/local</env>
		<use>dbus</use>
		<ldflags>-Wl,-rpath,/usr/local/lib</ldflags>
		<provided>sys-kernel/gentoo-sources-2.6.15-r7
			sys-apps/baselayout-1.11.14-r6
			<!-- Needed to protect the build host system against target baselayout
			     It will be merged explicitly to the target -->
			clip-layout/baselayout-clip-1.0-r1
		</provided>
		<mask>
			>=virtual/x11-6.8
			>=x11-base/xorg-x11-6.8.0
		</mask>
		<keywords>
			x11-misc/xdialog ~x86 ~arm
			dev-libs/dbus-glib ~x86 ~arm
			x11-misc/adeskbar ~x86 ~arm
		</keywords>
		<pkg>
			<pkgkey>libs</pkgkey>
			<pkgnames>
				media-libs/libmng
				dev-libs/libxml2
				media-libs/harfbuzz
				dev-libs/lzo
				x11-libs/cairo
				dev-libs/libcroco
				gnome-base/librsvg
				x11-misc/shared-mime-info
			</pkgnames>
			<use>opengl -drm -graphite -gallium svg -introspection -python xcb</use>
		</pkg>
		<pkg>
			<pkgkey>gtk</pkgkey>
			<pkgnames>
				dev-libs/atk
				x11-libs/pango
				x11-libs/gdk-pixbuf
				x11-libs/gtk+:2
			</pkgnames>
			<use>svg -introspection -python</use>
		</pkg>
		<pkg>
			<pkgkey>apps</pkgkey>
			<pkgnames>
				x11-wm/openbox
				x11-misc/xdialog
			</pkgnames>
			<use>clip-domains clip-build clip-x11 imlib nls -startup-notification</use>
		</pkg>
		<pkg>
			<pkgkey>notification</pkgkey>
			<pkgnames>
				app-text/iso-codes
				dev-libs/dbus-glib
				dev-libs/libIDL
				gnome-base/gconf
				gnome-base/orbit
				media-libs/libogg
				media-libs/libvorbis
				x11-libs/libnotify
				x11-libs/libwnck
				x11-misc/notification-daemon
			</pkgnames>
			<use>-gstreamer</use>
		</pkg>
		<pkg>
			<pkgkey>libcanberra</pkgkey>
			<pkgnames>
				media-libs/libcanberra
			</pkgnames>
			<use>alsa -sound -gtk3</use>
                        <ldflags>-Wl,-rpath,/usr/local/lib/qt4</ldflags>
		</pkg>
		<pkg>
			<pkgkey>python</pkgkey>
			<pkgnames>
				app-misc/mime-types
				dev-lang/python
				dev-python/numpy
				gnome-base/libglade
				dev-python/pygobject:2
				dev-python/pycairo
				dev-python/pygtk
				x11-apps/arandr
			</pkgnames>
			<use>-berkdb -sqlite libffi glep</use>
		</pkg>
		<pkg>
			<pkgkey>python-xklavier</pkgkey>
			<pkgnames>
				dev-python/python-xklavier
			</pkgnames>
                        <ldflags>-Wl,-rpath,/usr/local/lib/qt4</ldflags>
		</pkg>
		<pkg>
			<pkgkey>lxde</pkgkey>
			<pkgnames>
				x11-libs/libxklavier
				dev-python/dbus-python
				lxde-base/lxkeymap
				lxde-base/lxinput
			</pkgnames>
			<use>glep</use>
		</pkg>
		<pkg>
			<pkgkey>clip-viewer</pkgkey>
			<pkgnames>
				app-clip/clip-viewer
			</pkgnames>
			<ldflags>-Wl,-rpath,/usr/local/lib/qt4</ldflags>
		</pkg>
		<pkg>
			<pkgkey>panel</pkgkey>
			<pkgnames>
				clip-data/clip-wallpapers
				x11-misc/adeskbar
				gnome-base/gnome-menus
				dev-python/pyxdg
				dev-python/pyinotify
				clip-data/clip-icons
#if defined(CLIP_ARCH_x86) || defined(CLIP_ARCH_amd64)
				sys-power/acpi
#endif
				x11-misc/clip-menu-xdg
				dev-python/libwnck-python
				dev-python/gnome-python-desktop-base
				dev-python/python-xlib
			</pkgnames>
			<use>clip-domains nls python -introspection</use>
		</pkg>
		<pkg>
			<pkgkey>image</pkgkey>
			<pkgnames>
				media-gfx/feh
				media-libs/giblib
				media-libs/imlib2
			</pkgnames>
			<use>png</use>
		</pkg>
		<pkg>
			<pkgkey>dbus</pkgkey>
			<pkgnames>
				sys-apps/dbus
			</pkgnames>
		</pkg>
		<pkg>
			<pkgkey>qt4</pkgkey>
			<pkgnames>
				dev-qt/qtcore
				dev-qt/qtgui
				dev-qt/qtdbus
				dev-qt/qtsvg
				dev-qt/qtscript
				dev-qt/qt3support
				virtual/qt-core
				virtual/qt-gui
				virtual/qt-dbus
				virtual/qt-svg
				virtual/qt-script
				virtual/qt-qt3support
				x11-libs/qt-singleapplication
			</pkgnames>
			<use>accessibility dbus -cups gtk iconv mng qt3support ssl</use>
			<ldflags>-Wl,-rpath,/usr/local/lib/qt4</ldflags>
		</pkg>
		<pkg>
			<pkgkey>pinentry</pkgkey>
			<pkgnames>
				app-crypt/pinentry
				dev-libs/libassuan
				app-clip/ssm-display
			</pkgnames>
			<use>qt4 -gtk</use>
			<ldflags>-Wl,-rpath,/usr/local/lib/qt4</ldflags>
		</pkg>
		<pkg>
			<pkgkey>qtcurve</pkgkey>
			<pkgnames>
				x11-themes/qtcurve
			</pkgnames>
			<use>gtk -kde -mozilla qt4</use>
			<ldflags>-Wl,-rpath,/usr/local/lib/qt4</ldflags>
		</pkg>
		<pkg>
		        <pkgkey>clip-config</pkgkey>
		        <pkgnames>
			       clip-libs/ClipQt
		               app-clip/clip-config
		        </pkgnames>
		        <ldflags>-Wl,-rpath,/usr/local/lib/qt4</ldflags>
		</pkg>
		<pkg>
			<pkgkey>fltk</pkgkey>
			<pkgnames>
				x11-libs/fltk
			</pkgnames>
			<use>xft -opengl -xinerama</use>
		</pkg>
	</config>
	
